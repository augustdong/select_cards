body {
	background: #007BBE;
	font-family: "微软雅黑";
}

.title {
	height: 60px;
	line-height: 60px;
	font-size: 30px;
	color: #ffffff;
	position: absolute;
	left: 50%;
	top: 30%;
	transform: translate(-50%,-50%);
}

.btn {
	cursor: pointer;
	&:hover {
		text-decoration: underline;
	}
}

.switch {
	position: absolute;
	width: 100%;
	height: 20px;
	line-height: 20px;
	font-size: 14px;
	color: #ffffff;
	top: -25px;
	text-align: right;
	
}

.auth-box {
	width: auto;
	height: auto;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
	> .form-item {
		position: relative;
		box-sizing: border-box;
		width: 400px;
		height: 70px;
		margin: 0px;
		background: #ffffff;
		text-align: center;
		line-height: 70px;
		> label {
			display: inline-block;
			width: 100px;
			color: #B1B1C6;
			font-size: 20px;
			position: absolute;
			top: 0px;
			left: 0px;
		}
		> input {
			display: inline-block;
			font-size: 20px;
			padding: 10px;
			box-sizing: border-box;
			width: 300px;
			border: none;
			height: 70px;
			border: none;
			outline: none;
			position: absolute;
			top: 0px;
			left: 100px;
			&:focus {
				outline: none;
			}
		}
		&.act {
			background: none;
			text-align: center;
			> .btn {
				height: 100%;
				text-align: center;
				line-height: 70px;
				color: #ffffff;
				font-size: 18px;
			}
		}
	}
}