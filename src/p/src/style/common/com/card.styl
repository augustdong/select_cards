.ui-card {
	min-width: 200px;
	min-height: 260px;
  width: 100%;
  height: 100%;
	perspective: 800px;
	margin-left:auto;
	margin-right:auto;
	position: relative;
	> .inner {
	    width: 100%;
      height: 100%;
      background: #ffffff;
      position: relative;
      transform-style: preserve-3d;
      transition: 0.3s transform;
      transform-origin: center center;
      opacity: 1;
      border-radius: 4px;
  		> .item {
        position: relative;
  			width: 100%;
  			height: 100%;
  			backface-visibility: hidden;
  			&.front {
  				opacity: 1;
  			}
  			&.back {
  				position: absolute;
  				top: 0;
  				transform: rotateY(.5turn) translateZ(1px);
  				opacity: 0;
  			}
        > .content {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%,-50%);
          box-sizing: border-box;
          padding: 20px;
          width: 100%;
          height: auto;
          font-size: 16px;
          line-height: 22px;
          text-align: center;
        }
  		}
  		&.flipped {
  			transform: rotateY(.5turn);
  			.front {
  				opacity: 0;
  			}
  			.back {
  				opacity: 1;
  			}
  		}
	}
}