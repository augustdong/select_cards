.ui-card {
	width: 200px;
	height: 260px;
	perspective: 800px;
	margin-left:auto;
	margin-right:auto;
	position: relative;
	> .inner {
	    width: 100%;
      height: 100%;
      background: #ffffff;
      position: relative;
      transform-style: preserve-3d;
      transition: 0.3s transform;
      transform-origin: center center;
      opacity: 1;
      border-radius: 6px;
  		> .item {
  			display: block;
  			width: 100%;
  			height: 100%;
  			backface-visibility: hidden;
  			font-size: 60px;
  			text-align: center;
  			line-height: 260px;
  			&.front {
  				opacity: 1;
  			}
  			&.back {
  				position: absolute;
  				top: 0;
  				transform: rotateY(.5turn) translateZ(1px);
  				opacity: 0;
  			}
  		}
  		&.flipped {
  			transform: rotateY(.5turn);
  			.front {
  				opacity: 0;
  			}
  			.back {
  				opacity: 1;
  			}
  		}
	}
}